<%- include('lib/header') -%>

    <!-- content -->
    <main class="py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
                <div class="card-header card-title">
                  <div class="d-flex align-items-center">
                    <h2 class="mb-0">500 Error</h2>                    
                  </div>
                </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <div class="alert alert-danger" role="alert">                     
                      <% if (message) { %>
                          <h4 class="alert-heading">Error: <%= message %></h4>
                        <% } else { %>
                      <h4 class="alert-heading">Internal Server Error!</h4>
                        <% } %>
                      <p>Something went wrong on our end. Please try again later.</p>
                      <hr>
                      <p class="mb-0">If the problem persists, please contact support.</p>
                    </div>
                  </div>
                </div>                
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
 <%- include('lib/footer') -%>